<%- include('../partials/header') %>
    <main class="main container">
        <h1 class="create__titulo">EDITAR ITEM</h1>
        <form class="create__form" action="/admin/edit/<%= product.product_id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div>
                <label class="create__form-label" for="category">Categoría:</label>
                <select class="create__form-input" name="category" id="category">
                    <option value="">Seleccionar</option>
                    <option value="1">Funkos</option>
                    <option value="3">Remeras</option>
                    <option value="2">Llaveros</option>
                </select>

                <label class="create__form-label" for="licence">Licencia:</label>
                <select class="create__form-input" name="licence" id="licence">
                    <option value="">Seleccionar</option>
                    <option value="2">Star wars</option>
                    <option value="3">Harry Potter</option>
                    <option value="1">Pokemon</option>
                </select> 
            </div>
            <div>
                <label class="create__form-label" for="product_name">Nombre del producto:</label>
                <input class="create__form-inputp" type="text" id="product_name" name="product_name" value="<%= product.product_name %>"> 
            </div>
            <div>
                <label for="product_description"></label>
                <input class="create__form-inputd" type="text" id="product_description" name="product_description" value="<%= product.product_description %>"> 
            </div>
            <div>
                <label class="create__form-label" for="sku">SKU:</label>
                <input class="create__form-inputp" type="text" id="sku" name="sku" value="<%= product.sku %>">

                <label class="create__form-label" for="price">Precio:</label>
                <input class="create__form-inputp" type="text" id="price" name="price" value="$ <%= product.price %>">

                <label class="create__form-label" for="stock">Stock:</label>
                <input class="create__form-inputp" type="text" id="stock" name="stock" value="<%= product.stock %>">
            </div>
            <div>
                <label class="create__form-label" for="discount">Descuento:</label>
                <input class="create__form-input" type="text" id="discount" name="discount" value="% <%= product.discount %>">

                <label class="create__form-label" for="mpayment">Cuotas:</label>
                <select class="create__form-input" name="mpayment" id="mpayment">
                    <option value="3">3 Cuotas sin interés</option>
                    <option value="6">6 Cuotas sin interés</option>
                    <option value="12">12 Cuotas sin interés</option>
                </select> 
            </div>
            <div>
                <label class="create__form-label" for="pictures">Imágenes:</label>         
                <input type="file" name="images" id="img" multiple></input>                                                                                                    
            </div>

            <section class="create__img-sec">
                <div class="create__img">
                    <img src="/img<%= product.img_front %>" alt="frente del producto">
                    <p >Frente</p>
                </div>
                <div class="create__img">   
                    <img src="/img<%= product.img_back %>" alt="dorso del producto">
                    <p >Dorso</p>
                </div>
            </section>
            <div>
                <input class="create__boton" type="Submit" value="Modificar Producto"/>
                <input class="create__boton" type="Reset" value="Limpiar"/>
        
            </div>
        </form>

    </main>    
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>
</html>