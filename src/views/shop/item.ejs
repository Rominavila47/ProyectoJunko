<%- include('../partials/header') %>
    <main class="main container">
        <section class="collection">                         
            <picture class="card-item__cover">
                <img class="card-item__img--front" src="/img<%= item.img_front %>" alt="<%= item.product__descripcion %>">
                <img class="card-item__img--back" src="/img<%= item.img_back %>" alt="<%= item.product__descripcion %>">
            </picture>
            <article class="collection__content items">
                <p><%= item.licence_name %></p>
                <h3 class="collection__title"><%= item.product_name %></h3>
                <p><%= item.product_description %></p>
                <p>$ <%= item.price %> .-</p>
                <div class="item__cart">
                    <button id="subtrac" class="item__quantity" type="button">-</button>
                    <input class="item__input" type="text" id="quantity" name="quantity" placeholder="0">
                    <button id="add" class="item__quantity" type="button">+</button>
                    <button class="formulario__boton">Agregar al Carrito</button>
                </div>
                <a class="formulario__label-a" href="">Ver métodos de pago -<%= item.dues %> CUOTAS SIN INTERÉS</a>
            </article>
        </section>
        <section class="slider container glide"><!--PRODUCTOS carrusel-->
            <h2 class="slider__title">PRODUCTOS RELACIONADOS</h2>
            <div class="glide__track" data-glide-el="track">
                <ul class="slider__items glide__slides">
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="../../img/star-wars/trooper-1.webp" alt="Figura coleccionable del Storm Trooper">
                                    <img class="card-item__img--back" src="../../img/star-wars/trooper-box.webp" alt="Figura coleccionable del Storm Trooper en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence">STAR WARS</p>
                                    <h4 class="card-item__name">Stormtrooper Lightsaber</h4>
                                    <p class="card-item__price">$ 17500</p>
                                    <p class="card-item__promo">6 CUOTAS S/INTERES</p>                          
                                </div>
                            </a>
                        </article>
                    </li>
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="/shop/item">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="../../img/pokemon/pidgeotto-1.webp" alt="Figura coleccionable del Pidgeotto">
                                    <img class="card-item__img--back"  src="../../img/pokemon/pidgeotto-box.webp" alt="Figura coleccionable del Pidgeotto en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence">POKEMON</p>
                                    <h4 class="card-item__name">Pidgeotto</h4>
                                    <p class="card-item__price">$ 13500</p>
                                    <p class="card-item__promo">6 CUOTAS S/INTERES</p>                            
                                </div>
                            </a>
                        </article>
                    </li>
                    <li class="slider__item glide__slide">
                        <article class="card-item">
                            <a class="card-item__link" href="">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="../../img/harry-potter/luna-1.webp" alt="Figura coleccionable de Luna lovegood">
                                    <img class="card-item__img--back"  src="../../img/harry-potter/luna-box.webp" alt="Figura coleccionable de Luna lovegood en">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence">HARRY POTTER</p>
                                    <h4 class="card-item__name">Luna</h4>
                                    <p class="card-item__price">$ 19500</p>
                                    <p class="card-item__promo">6 CUOTAS S/INTERES</p>                              
                                </div>
                            </a>
                        </article>
                    </li>    
                </ul>
            </div>
            <div div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
            </div>
        </section>
    </main> 
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="../../js/glide.js"></script>
    <script src="../../js/item.js"></script>

</body>
</html>